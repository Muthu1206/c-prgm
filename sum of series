#include <stdio.h>

int main() 
{
    int num;
    int sum;

    printf("Enter a positive integer: ");
    scanf("%d",&num);

    
    if (num < 1) 
    {
        printf("Please enter a positive integer.\n");
        return 1;
    }

    
    sum = (num * (num + 1)) / 2;

  
    printf("The sum of the first %d natural numbers is: %d\n", num, sum);

    return 0; 
}
